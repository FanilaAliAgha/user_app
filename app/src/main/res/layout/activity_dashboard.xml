<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Dashboard">

    <ImageView
        android:id="@+id/bannerimage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:ignore="MissingConstraints"
        android:src="@drawable/threeimg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bannerimage"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:id="@+id/ride"
                android:clickable="true"
                android:layout_height="120dp"
                android:layout_marginLeft="35dp"
                app:cardBackgroundColor="@color/orangecolor"
                app:cardCornerRadius="80dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/car" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="109dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:gravity="bottom"
                    android:text="Rides"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"

                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="15dp"
                android:layout_marginLeft="45dp"
                app:cardBackgroundColor="@color/orangecolor"
                app:cardCornerRadius="80dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_gravity="center"
                    android:layout_height="70dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/truck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="6dp"
                    android:gravity="bottom"
                    android:text="Delivery"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"

                    />

            </androidx.cardview.widget.CardView>

        </LinearLayout>




        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:id="@+id/shop"
                android:layout_height="120dp"
                android:layout_marginLeft="35dp"
                app:cardBackgroundColor="@color/orangecolor"
                app:cardCornerRadius="80dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/shop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="109dp"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:text="Shop"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"

                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/service"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="15dp"
                android:layout_marginLeft="45dp"
                app:cardBackgroundColor="@color/orangecolor"
                app:cardCornerRadius="80dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_gravity="center"
                    android:layout_height="70dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/services" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="6dp"
                    android:gravity="bottom"
                    android:text="Service"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"

                    />

            </androidx.cardview.widget.CardView>

        </LinearLayout>




        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/career"
                android:clickable="true"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="35dp"
                app:cardBackgroundColor="@color/orangecolor"
                app:cardCornerRadius="80dp">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/businessman" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="109dp"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:text="Career"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"

                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="15dp"
                android:id="@+id/buy"
                android:layout_marginLeft="45dp"
                app:cardBackgroundColor="@color/orangecolor"
                app:cardCornerRadius="80dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_gravity="center"
                    android:layout_height="80dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/sell" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1dp"
                    android:gravity="bottom"
                    android:text="Sell"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"

                    />

            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/purple_200"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">


        <nl.joery.animatedbottombar.AnimatedBottomBar
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/orangecolor"
            android:duplicateParentState="true"
            app:abb_animationDuration="10"
            app:abb_badgeTextColor="@color/white"
            app:abb_indicatorAppearance="round"
            app:abb_indicatorColor="@color/white"
            app:abb_indicatorHeight="4dp"
            app:abb_indicatorMargin="16dp"
            app:abb_rippleColor="@color/white"
            app:abb_rippleEnabled="true"
            app:abb_selectedIndex="1"
            app:abb_selectedTabType="text"
            app:abb_tabAnimationSelected="fade"
            app:abb_tabColor="@color/white"
            app:abb_tabColorDisabled="@color/white"
            app:abb_tabColorSelected="@color/white"
            app:abb_tabs="@menu/menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="MissingConstraints" />


    </com.google.android.material.bottomnavigation.BottomNavigationView>



</androidx.constraintlayout.widget.ConstraintLayout>